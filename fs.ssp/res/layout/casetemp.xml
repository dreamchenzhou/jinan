<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_menu_bg" >
	<LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dip"
         android:layout_above="@+id/casetemp_linearlayout2"
        >
    <ListView
        android:listSelector="@android:color/transparent" 
        android:id="@+id/casetemp_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:background="@drawable/login_txt"
        android:divider="#d0d0d0"
        android:dividerHeight="1px"
        />
	</LinearLayout>
    <LinearLayout
        android:id="@+id/casetemp_linearlayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >
<Button
			android:id="@+id/casetemp_btn_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@xml/button_sure"
			android:text="返  回"
			android:textColor="#FFFFFF"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:paddingLeft="25dip" />
    </LinearLayout>

</RelativeLayout>